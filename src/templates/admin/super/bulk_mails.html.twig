{% include 'admin/head.html.twig' %}

{% include 'admin/menu.html.twig' %}

<div id="wrapper">

    {% include 'admin/super/sidebar.html.twig' %}

    <div id="content-wrapper">

      <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="#">Bulk Mails</a>
          </li>
          <li class="breadcrumb-item active">Details</li>
        </ol>

    <!-- DataTables Example -->
    <div class="card mb-3">
          <div class="card-header">
            <i class="fas fa-table"></i>
            Select companies to send mails 
            </div>
            <div id="super_company_result" class="alert"></div>
          <div class="card-body">
            <div class="block">
              <form method="post" name="frm_super_bulk_mails" id="frm_super_bulk_mails" action="/manager/super/bulk/mails">
                  <input type="hidden" id="csrf" name="csrf" value="{{ key }}">
                  <select class="form-control" id="mail" name="mail" required>
                    <option value="">Select Mail</option>
                    {% for mail in mails %}
                      <option value="{{ mail.id }}">{{ mail.subject }}</option>
                    {% endfor %}
                  </select>
            <div>
            <br>
            <div class="table-responsive"> 
            <table class="table datatable" id="dataTable2" width="100%" cellspacing="0">
              <thead>
                  <tr> 
                      <th>ID</th>
                      <th>Company</th>
                      <th>Name</th>
                      <th>Email</th> 
                      <th>Select</th>
                  </tr>
                  </thead>                        
                  <tbody>             
              
                  {% for row in result %}     
              
                  <tr class="table-white tr">
                    <td>{{ row.uid }}</td>
                    <td>{{ row.company_name }}</td>
                    <td>{{ row.Name_First }} {{ row.Name_Last }} </td>
                    <td>{{ row.Email }}</td>
                    <td><input type="checkbox" id="send[]" name="send[]" value="{{ row.Email }}#{{ row.Name_First }} {{ row.Name_Last }}#{{ row.company_name }}"></td>
                  </tr>

                  {% endfor %}                     
                
                </tbody>
        </table>        
            </div>
            <div class="block">
                  <input type="submit" class="btn btn-primary">
                </form>
              </div>
              <br>
            </div>
          </div>
          <div class="card-footer small text-muted">Updated {{ "now"|date("F jS Y \\a\\t g:ia") }}</div>
        </div>

      </div>
      <!-- /.container-fluid -->

      {% include 'admin/copyright.html.twig' %}

    </div>
    <!-- /.content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

{% include 'admin/footer.html.twig' %}